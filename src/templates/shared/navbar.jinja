{% macro _nav_item(endpoint, text) %}
{% set is_current_page = request.path[1:].split('/')[0] == endpoint %}
<li class="nav-item">
  <a
    class="nav-link {{ 'active' if is_current_page }}"
    {% if is_current_page %} aria-current="page" {% endif %}
    href="{{ url_for(endpoint) }}"
  >
    {{ text }}
  </a>
</li>
{% endmacro %}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img
        width="52"
        height="48"
        src="{{ url_for('static', filename='logo.png') }}"
      />
      {{ APP_NAME }}
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarText"
      aria-controls="navbarText"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="nav navbar-nav me-auto mb-2 mb-lg-0">
        {% if is_logged_in %}
        {{ _nav_item('orders', 'Orders') }}
        {% if is_deliverer %}
        {{ _nav_item('deliveries', 'Deliveries') }}
        {% endif %}
        {% endif %}
      </ul>

      <ul class="nav navbar-nav navbar-right">
        {% if is_logged_in %}
        <li class="nav-item dropdown me-2">
          <a
            class="nav-link dropdown-toggle"
            id="user-dropdown"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <strong>{{ netid }}</strong>
          </a>
          <ul
            class="dropdown-menu dropdown-menu-end"
            aria-labelledby="user-dropdown"
          >
            <li>
              <a class="dropdown-item" href="{{ url_for('profile') }}">
                Profile
              </a>
            </li>
          </ul>
        </li>
        <li class="nav-item">
          <a class="btn btn-danger" href="{{ url_for('log_out') }}">
            Log out
          </a>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="btn btn-success" href="{{ url_for('log_in') }}">
            Log in
          </a>
        </li>
        {% endif %}
      </ul>
    </div>
  </div>
</nav>
