{% extends "shared/layout.jinja" %}

{% block title %}
Orders
{% endblock %}

{% block body %}
<div id="orders-body" class="container-fluid">
  <div class="row">
    <div class="col">
      <h2>Orders</h2>
    </div>
    <div class="col-auto">
      <a class="btn btn-success" href="{{ url_for('create_order') }}">
        Add Order
      </a>
    </div>
  </div>
  {% if orders|length == 0 %}
  <div class="row">
    <div class="col">
      You don't have any orders!
    </div>
  </div>
  {% else %}
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Package Name</th>
        <th>Locker Kiosk</th>
        <th>Status</th>
        <th class="button-column"></th>
      </tr>
    </thead>
    <tbody>
      {% for order in orders %}
      <tr>
        <td>{{ order.order_title }}</td>
        <td>{{ order.kiosk }}</td>
        <td>{{ order.order_status }}</td>
        <td class="button-column">
          <a
            class="btn btn-info"
            href="{{ url_for('view_order', order_id=order.order_id) }}"
          >
            View
          </a>
          <a
            class="btn btn-success"
            href="{{ url_for('edit_order', order_id=order.order_id) }}"
          >
            Edit
          </a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  {% endif %}
</div>
{% endblock %}
